    async function selectTier(cost, winCount) {
        // æ£€æŸ¥ç”µå¸ä½™é¢
        const currentBalance = parseInt(document.getElementById('current-balance').textContent);
        
        if (currentBalance < cost) {
            alert(`âš¡ ç”µå¸ä¸è¶³ï¼å½“å‰ä½™é¢: ${currentBalance} ç”µå¸ï¼Œéœ€è¦: ${cost} ç”µå¸ã€‚ä»…ä¾›å¨±ä¹ï¼Œè™šæ‹Ÿç”µå¸ä¸å¯å…‘æ¢çœŸå®è´§å¸ã€‚`);
            return;
        }
        
        selectedTier = { cost, winCount };
        
        try {
            // æ‰£é™¤ç”µå¸å¹¶è·å–æ¸¸æˆç»“æœ
            const response = await fetch('/api/scratch/play', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-Token': '<%= csrfToken %>'
                },
                body: JSON.stringify({ 
                    username: '<%= username %>',
                    tier: cost,
                    winCount: winCount
                })
            });
            
            const data = await response.json();
            if (!data.success) {
                alert('æ¸¸æˆå¼€å§‹å¤±è´¥ï¼š' + data.message);
                return;
            }
            
            currentGameData = data;
            
            // æ›´æ–°ä½™é¢æ˜¾ç¤º
            document.getElementById('current-balance').textContent = data.newBalance;
            
            // æ˜¾ç¤ºæ¸¸æˆç•Œé¢
            startScratchGame(data);
            
        } catch (error) {
