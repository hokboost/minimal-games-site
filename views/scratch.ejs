    // æ·»åŠ ç‚¹å‡»äº‹ä»¶ç›‘å¬å™¨
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.tier-btn').forEach(btn => {
            btn.addEventListener('click', function() {
