            margin: 0;
        }
        
        .tier-selection {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .tier-selection h4 {
            color: #00c853;
            margin-bottom: 1.5rem;
        }
        
        .tier-buttons {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
            margin-bottom: 2rem;
        }
        
        .tier-btn {
            background: linear-gradient(135deg, #4caf50, #45a049);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 1.5rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            min-width: 140px;
            text-align: center;
            box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
        }
        
        .tier-btn:hover {
            transform: translateY(-3px);
