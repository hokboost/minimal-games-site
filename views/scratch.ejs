        }
        
        .tier-cost {
            color: #ffeb3b;
            font-size: 1.1rem;
        }
        
        .tier-detail {
            color: #ccc;
            font-size: 0.9rem;
        }
        
        
        .game-info {
            text-align: center;
            margin-bottom: 1.5rem;
        }
        
        #current-tier-info {
            background: rgba(255, 255, 255, 0.1);
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-weight: bold;
        }
        
        button {
