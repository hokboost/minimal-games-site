  <script>
    // â˜… ä½ çš„ Render quizserver åœ°å€
    const SERVER = "https://quiz-server-xbm0.onrender.com";

    let username = "";
    let currentIndex = 0;
    const totalQuestions = 15;
    let answers = [];
    let timerId = null;
    const QUIZ_DURATION = 30; // ç§’
    let endTime = 0;
    let seenIds = [];
    let lock = false;
    let currentToken = null;
    let currentSignature = null;

    async function startQuiz() {
      // 1. æ‹¿æ˜µç§°ï¼ˆå®Œå…¨å‰ç«¯ï¼Œæ— ç™»å½•ï¼‰
      if (!username) {
        username = prompt("è¯·è¾“å…¥ä½ çš„æ˜µç§°ï¼ˆå¯éšä¾¿å†™ï¼‰ï¼š") || "æ¸¸å®¢";
      }

      // 2. åˆå§‹åŒ– UI & çŠ¶æ€
      document.getElementById("user-section").style.display = "none";
      document.getElementById("quiz").style.display = "block";
      document.getElementById("result").textContent = "";
      document.getElementById("leaderboard").style.display = "none";

      answers = [];
      currentIndex = 0;
      seenIds = [];
      lock = false;

      // 3. å¯åŠ¨è®¡æ—¶å™¨
      endTime = Date.now() + QUIZ_DURATION * 1000;
      startTimer();

      // 4. æ‹‰ç¬¬ä¸€é¢˜
      await loadNext();
    }

    function startTimer() {
      if (timerId) clearInterval(timerId);

      timerId = setInterval(() => {
        const now = Date.now();
        const remaining = Math.max(0, Math.floor((endTime - now) / 1000));
        const timerEl = document.getElementById("timer");
        timerEl.textContent = `å€’è®¡æ—¶ï¼š${remaining} ç§’`;

        // å¯ä»¥åŠ ä¸€ç‚¹é¢œè‰²å˜åŒ–
        if (remaining <= 5) {
          timerEl.style.color = "#ff4757";
        } else {
          timerEl.style.color = "#d32f2f";
        }

        if (remaining <= 0) {
          clearInterval(timerId);
          submitQuiz();
        }
      }, 500); // åŠç§’åˆ·æ–°
    }

    async function loadNext() {
      if (currentIndex >= totalQuestions) {
        return submitQuiz();
      }

      try {
        const res = await fetch(`${SERVER}/quiz/next`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          // â˜… æ—§ç‰ˆåè®®ï¼šç”¨æˆ·å + å·²è§è¿‡çš„é¢˜ç›® id
          body: JSON.stringify({ username, seen: seenIds })
        });

        const data = await res.json();
        if (!data.success || !data.question) {
          return submitQuiz();
        }

        currentToken = data.token;
        currentSignature = data.signature;
        seenIds.push(data.question.id);

        showQuestion(data.question);
      } catch (err) {
        console.error("åŠ è½½é¢˜ç›®å‡ºé”™ï¼š", err);
        submitQuiz();
      }
    }

    function showQuestion(q) {
      lock = false;
      const qDiv = document.getElementById("question");
      const opts = document.getElementById("options");

      qDiv.textContent = `é¢˜ç›® ${currentIndex + 1}/${totalQuestions}ï¼š${q.question}`;

      // é˜²æ­¢é—ªçƒï¼šå…ˆéšè—å†æ˜¾ç¤º
      opts.innerHTML = "";
      opts.style.display = "none";
      setTimeout(() => { opts.style.display = "block"; }, 10);

      q.options.forEach((opt, idx) => {
        const div = document.createElement("div");
        div.className = "option";
        div.textContent = opt;
        div.onclick = () => selectAnswer(idx);
        opts.appendChild(div);
      });
    }

    function selectAnswer(idx) {
      if (lock) return;
      lock = true;

      // é«˜äº®é€‰ä¸­é¡¹
      const options = Array.from(document.getElementsByClassName("option"));
      options[idx].classList.add("selected");

      // é”å®šæ‰€æœ‰é€‰é¡¹
      options.forEach(el => {
        el.onclick = null;
        el.classList.add("locked");
      });

      // æ”¶é›†ç­”æ¡ˆï¼ˆæ—§ç‰ˆåè®®ï¼štoken + signature + answerIndexï¼‰
      answers.push({
        token: currentToken,
        signature: currentSignature,
        answerIndex: idx
      });

      currentIndex++;
      // æ‹‰ä¸‹ä¸€é¢˜ï¼ˆç¨å¾®ç»™ç‚¹æ—¶é—´æ˜¾ç¤ºé€‰ä¸­çŠ¶æ€ï¼‰
      setTimeout(() => loadNext(), 400);
    }

    async function submitQuiz() {
      clearInterval(timerId);

      const timestamp = Math.floor(Date.now() / 1000);
      const nonce = (crypto.randomUUID && crypto.randomUUID()) ||
                    Math.random().toString(36).slice(2);

      try {
        const res = await fetch(`${SERVER}/quiz/submit`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ username, answers, timestamp, nonce })
        });

        const result = await res.json();
        document.getElementById("quiz").style.display = "none";
        const resultDiv = document.getElementById("result");

        if (result.success) {
          resultDiv.innerHTML =
            `âœ… ç­”é¢˜ç»“æŸï¼<br>` +
            `æ˜µç§°ï¼š<b>${username}</b><br>` +
            `å¾—åˆ†ï¼š<b>${result.score}/${result.total}</b><br>` +
            (result.proof ? `ç­¾åï¼š<br><code>${result.proof}</code>` : "");

          loadLeaderboard();
        } else {
          resultDiv.textContent = "æäº¤å¤±è´¥ï¼š" + (result.message || "æœªçŸ¥é”™è¯¯");
        }
      } catch (err) {
        console.error("æäº¤å‡ºé”™ï¼š", err);
        document.getElementById("result").textContent = "ç½‘ç»œé”™è¯¯ï¼Œæäº¤å¤±è´¥";
      }
    }

    function loadLeaderboard() {
      fetch(`${SERVER}/quiz/leaderboard`)
        .then(res => res.json())
        .then(data => {
          if (!data.success || !Array.isArray(data.leaderboard)) return;
          const board = document.getElementById("leaderboard");
          const tbody = document.getElementById("leaderboard-body");
          board.style.display = "block";
          tbody.innerHTML = "";

          data.leaderboard.forEach((r, i) => {
            const row = document.createElement("tr");
            const timeStr = new Date(r.submitted_at).toLocaleString("zh-CN", {
              timeZone: "Asia/Shanghai",
              year: "numeric",
              month: "2-digit",
              day: "2-digit",
              hour: "2-digit",
              minute: "2-digit",
              second: "2-digit",
              hour12: false
            });

            row.innerHTML =
              `<td>${i + 1}</td>` +
              `<td>${r.username}</td>` +
              `<td>${r.score}</td>` +
              `<td>${timeStr}</td>`;

            tbody.appendChild(row);
          });
        })
        .catch(err => {
          console.error("åŠ è½½æ’è¡Œæ¦œå¤±è´¥ï¼š", err);
        });
    }
