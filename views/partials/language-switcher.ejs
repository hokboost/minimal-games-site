<!-- 语言切换按钮 -->
<div class="language-switcher">
    <% if (lang === 'zh') { %>
        <a href="/set-language/en" class="lang-btn" title="Switch to English">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
            </svg>
            <span>EN</span>
        </a>
    <% } else { %>
        <a href="/set-language/zh" class="lang-btn" title="Switch to Chinese">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
            </svg>
            <span>中文</span>
        </a>
    <% } %>
</div>

<script src="/js/i18n-helpers.js"></script>

<style>
.language-switcher {
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 9999;
}

.lang-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    background: rgba(0, 200, 83, 0.1);
    border: 2px solid #00c853;
    border-radius: 25px;
    color: #00c853;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 15px rgba(0, 200, 83, 0.2);
}

.lang-btn:hover {
    background: #00c853;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 200, 83, 0.4);
}

.lang-btn svg {
    flex-shrink: 0;
}

/* 响应式设计 */
@media (max-width: 768px) {
    .language-switcher {
        top: 10px;
        right: 10px;
    }

    .lang-btn {
        padding: 6px 12px;
        font-size: 12px;
    }

    .lang-btn svg {
        width: 16px;
        height: 16px;
    }
}
</style>
