        }

        .action-btn {
            flex: 1;
            background: linear-gradient(135deg, #ff6b6b, #ee5a24);
            color: #fff;
            border: none;
            border-radius: 10px;
            padding: 0.9rem 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .action-btn:disabled {
            background: #95a5a6;
            cursor: not-allowed;
        }

        .result-box {
            margin-top: 1.5rem;
            text-align: center;
            font-size: 1.1rem;
            min-height: 2.2rem;
        }

        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }

            .header {
                flex-direction: column;
                gap: 1rem;
            }

            .duel-panel {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
