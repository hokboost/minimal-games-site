    <link rel="stylesheet" href="/styles.css">
    <style>
        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 2rem;
            background: rgba(0, 0, 0, 0.8);
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
            color: #fff;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #00c853;
        }

        .header h1 {
            margin: 0;
            color: #00c853;
        }

        .nav-links {
            display: flex;
            gap: 1rem;
            align-items: center;
            color: #ccc;
        }

        .nav-links a {
            color: #fff;
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

        .nav-links a:hover {
            background: rgba(0, 200, 83, 0.2);
            transform: translateY(-2px);
        }

        .balance-section {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: center;
        }

        .balance-section h3 {
            color: #ffeb3b;
            margin: 0;
        }

        .stone-board {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1.5rem;
        }

        .stone-ring {
            position: relative;
            width: 340px;
            height: 340px;
            border-radius: 50%;
            border: 2px dashed rgba(255, 255, 255, 0.15);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .stone-slot {
            position: absolute;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: #111;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .stone-slot.empty {
            color: #888;
            font-size: 1.6rem;
        }

        .stone-slot.selected {
            transform: scale(1.08);
            box-shadow: 0 0 12px rgba(255, 255, 255, 0.5);
            border-color: #fff;
        }

        .stone-slot[data-index="0"] { top: -5px; left: 50%; transform: translateX(-50%); }
        .stone-slot[data-index="1"] { top: 55px; right: -5px; }
        .stone-slot[data-index="2"] { bottom: 55px; right: -5px; }
        .stone-slot[data-index="3"] { bottom: -5px; left: 50%; transform: translateX(-50%); }
        .stone-slot[data-index="4"] { bottom: 55px; left: -5px; }
        .stone-slot[data-index="5"] { top: 55px; left: -5px; }

        .stone-red { background: #ff4d4d; }
        .stone-orange { background: #ff8c1a; }
        .stone-yellow { background: #ffd000; }
        .stone-green { background: #2ecc71; }
        .stone-cyan { background: #00bcd4; }
        .stone-blue { background: #3f51b5; }
        .stone-purple { background: #9c27b0; }

        .stone-slot.swap-animate {
            animation: stone-swap 0.35s ease;
        }

        @keyframes stone-swap {
            0% { transform: scale(1); opacity: 1; }
            40% { transform: translateY(10px) scale(0.9); opacity: 0.2; }
            100% { transform: scale(1); opacity: 1; }
        }

        .reward-center {
            width: 160px;
            height: 160px;
            border-radius: 50%;
            background: rgba(0, 0, 0, 0.5);
            border: 2px solid rgba(0, 200, 83, 0.4);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            gap: 0.4rem;
            padding: 1rem;
        }

        .reward-title {
            font-size: 0.85rem;
            color: #ccc;
        }

        .reward-amount {
            font-size: 1.4rem;
            font-weight: bold;
            color: #ffeb3b;
        }

        .reward-same {
            font-size: 0.9rem;
            color: #ccc;
        }

        .reward-btn {
            background: linear-gradient(135deg, #00c853, #00bfa5);
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 0.4rem 0.8rem;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .reward-btn.ready {
            filter: brightness(1.1);
            box-shadow: 0 0 12px rgba(0, 200, 83, 0.35);
        }

        .reward-btn:disabled {
            background: #95a5a6;
            cursor: not-allowed;
            box-shadow: none;
            filter: none;
        }

        .action-row {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            justify-content: center;
        }

        .action-btn {
            background: linear-gradient(135deg, #ff6b6b, #ee5a24);
            color: #fff;
            border: none;
            border-radius: 10px;
            padding: 0.8rem 1.4rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .action-btn.secondary {
            background: linear-gradient(135deg, #1e88e5, #1565c0);
        }

        .action-btn.ready {
            filter: brightness(1.1);
            box-shadow: 0 0 12px rgba(255, 107, 107, 0.35);
        }

        .action-btn:disabled {
            background: #95a5a6;
            cursor: not-allowed;
            box-shadow: none;
            filter: none;
        }

        .replace-panel {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 1rem 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 0.6rem;
            min-width: 260px;
            text-align: center;
        }

        .replace-panel span {
            color: #ccc;
        }

        .replace-panel strong {
            color: #ffeb3b;
        }

        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }

            .header {
                flex-direction: column;
                gap: 1rem;
            }

            .stone-ring {
                width: 280px;
                height: 280px;
            }

            .stone-slot {
                width: 50px;
                height: 50px;
            }

            .reward-center {
                width: 130px;
                height: 130px;
            }
        }
    </style>
</head>
