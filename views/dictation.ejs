    <script src="/js/dictation.js"></script>

    <style>
        .container {
            max-width: 960px;
            margin: 0 auto;
            padding: 2rem;
            background: rgba(0, 0, 0, 0.8);
            border-radius: 16px;
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.45);
            color: #fff;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #4dd0e1;
        }

        .header h1 {
            margin: 0;
            color: #4dd0e1;
        }

        .nav-links {
            display: flex;
            gap: 1rem;
            align-items: center;
            color: #ccc;
        }

        .nav-links a {
            color: #fff;
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }

        .nav-links a:hover {
            background: rgba(77, 208, 225, 0.2);
            transform: translateY(-2px);
        }

        .dictation-panel {
            background: rgba(255, 255, 255, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.12);
            border-radius: 16px;
            padding: 2rem;
        }

        .dictation-progress {
            display: flex;
            flex-direction: column;
            gap: 0.3rem;
            font-size: 1.1rem;
            color: #f6e58d;
            margin-bottom: 1.5rem;
        }

        .dictation-subtext {
            font-size: 0.9rem;
            color: #b2bec3;
        }


        .dictation-controls,
        .submit-controls {
            display: flex;
            flex-wrap: wrap;
            gap: 0.8rem;
            margin-bottom: 1.5rem;
        }

        .dictation-audio {
            display: flex;
            align-items: center;
            gap: 0.6rem;
            margin-bottom: 1.2rem;
        }

        .dictation-audio-label {
            color: #e0f7fa;
            font-weight: 600;
        }

        .speaker-btn {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            border: none;
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            cursor: pointer;
            font-size: 1.1rem;
            transition: transform 0.2s ease, background 0.2s ease;
        }

        .speaker-btn:hover:not(:disabled) {
            background: rgba(77, 208, 225, 0.2);
            transform: translateY(-2px);
        }

        .primary-btn,
        .ghost-btn {
            border: none;
            border-radius: 999px;
            padding: 0.65rem 1.6rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .primary-btn {
            background: linear-gradient(135deg, #4dd0e1, #1de9b6);
            color: #04131a;
            box-shadow: 0 6px 18px rgba(29, 233, 182, 0.35);
        }

        .primary-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(29, 233, 182, 0.45);
        }

        .ghost-btn {
            background: rgba(255, 255, 255, 0.08);
            color: #fff;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .ghost-btn:hover:not(:disabled) {
            background: rgba(77, 208, 225, 0.2);
        }

        button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            box-shadow: none;
        }

        .input-section {
            display: flex;
            flex-direction: column;
            gap: 0.6rem;
            margin-bottom: 1.5rem;
        }

        .input-section label {
            color: #e0f7fa;
            font-weight: 600;
        }

        .dictation-grid {
            display: grid;
            grid-template-columns: repeat(4, minmax(60px, 1fr));
            gap: 0.8rem;
            max-width: 360px;
        }

        .dictation-pinyin {
            display: grid;
            grid-template-columns: repeat(4, minmax(60px, 1fr));
            gap: 0.8rem;
            max-width: 360px;
            margin-bottom: 0.4rem;
            color: #4dd0e1;
            font-size: 0.85rem;
            text-align: center;
            letter-spacing: 0.5px;
        }

        .dictation-pinyin-cell {
            min-height: 1rem;
        }

        .dictation-cell {
            width: 100%;
            aspect-ratio: 1 / 1;
            background:
                linear-gradient(to right, transparent 48%, rgba(255, 255, 255, 0.3) 49%, rgba(255, 255, 255, 0.3) 51%, transparent 52%),
                linear-gradient(to bottom, transparent 48%, rgba(255, 255, 255, 0.3) 49%, rgba(255, 255, 255, 0.3) 51%, transparent 52%),
                rgba(0, 0, 0, 0.45);
            border: 1px solid rgba(77, 208, 225, 0.4);
            border-radius: 10px;
            touch-action: none;
        }

        .dictation-grid-disabled .dictation-cell {
            pointer-events: none;
            opacity: 0.7;
        }

        .dictation-grid-actions {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            margin-top: 0.6rem;
        }

        .dictation-grid-hint {
            color: #b2bec3;
            font-size: 0.85rem;
        }

        .dictation-definition {
            margin-top: 0.8rem;
            padding: 0.7rem 0.9rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.12);
            border-radius: 10px;
            color: #e0f7fa;
            font-size: 0.9rem;
            line-height: 1.6;
            max-width: 520px;
        }

        .ghost-btn.active {
            background: rgba(77, 208, 225, 0.35);
            border-color: rgba(77, 208, 225, 0.8);
        }

        .dictation-status {
            min-height: 1.6rem;
            color: #ffeb3b;
            font-size: 0.95rem;
        }

        .dictation-note {
            margin-top: 2rem;
            padding: 1rem 1.2rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.12);
            border-radius: 12px;
            color: #ccc;
            line-height: 1.6;
        }

        .dictation-confirm {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.6);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
            z-index: 10000;
        }

        .dictation-confirm-card {
            width: 100%;
            max-width: 420px;
            background: #0d1b21;
            border: 1px solid rgba(77, 208, 225, 0.4);
            border-radius: 16px;
            padding: 1.6rem;
            text-align: center;
            color: #fff;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.45);
        }

        .dictation-confirm-card h3 {
            margin: 0 0 0.6rem;
            color: #4dd0e1;
        }

        .dictation-confirm-card p {
            margin: 0 0 1.4rem;
            color: #cfd8dc;
        }

        .dictation-confirm-actions {
            display: flex;
            justify-content: center;
            gap: 0.8rem;
            flex-wrap: wrap;
        }

        .dictation-zoom {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
            z-index: 10001;
        }

        .dictation-zoom-card {
            width: min(520px, 92vw);
            background: #0b151b;
            border: 1px solid rgba(77, 208, 225, 0.4);
            border-radius: 18px;
            padding: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
        }

        .dictation-zoom-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            color: #e0f7fa;
            font-weight: 600;
        }

        #dictation-zoom-canvas {
            width: 100%;
            aspect-ratio: 1 / 1;
            border-radius: 12px;
            background:
                linear-gradient(to right, transparent 48%, rgba(255, 255, 255, 0.2) 49%, rgba(255, 255, 255, 0.2) 51%, transparent 52%),
                linear-gradient(to bottom, transparent 48%, rgba(255, 255, 255, 0.2) 49%, rgba(255, 255, 255, 0.2) 51%, transparent 52%),
                rgba(0, 0, 0, 0.55);
        }

        .dictation-zoom-actions {
            display: flex;
            gap: 0.6rem;
            justify-content: flex-end;
            flex-wrap: wrap;
        }

        @media (max-width: 768px) {
            .container {
                padding: 1.5rem;
            }

            .header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .nav-links {
                flex-wrap: wrap;
            }

            .dictation-grid {
                max-width: 100%;
                grid-template-columns: repeat(4, minmax(54px, 1fr));
            }

            .dictation-cell {
                font-size: 1.4rem;
            }
        }
    </style>
</body>
</html>
