    <script>
        const username = "<%= username %>";
        const csrfToken = "<%= csrfToken %>";
        
        // ä»localStorageè·å–ç¥ˆæ„¿æ•°æ®
        let wishData = JSON.parse(localStorage.getItem('wishData_' + username) || '{"total": 0, "success": 0, "current": 0}');
        
        function updateDisplay(serverData = null) {
            document.getElementById('totalWishes').textContent = wishData.total;
            document.getElementById('successCount').textContent = wishData.success;
            document.getElementById('currentProgress').textContent = `${wishData.current} / 148`;
            
            // æ›´æ–°ä¸ªäººä¸­å¥–ç‡
            const personalRate = wishData.total > 0 ? (wishData.success / wishData.total * 100) : 0;
            document.getElementById('personalRate').textContent = personalRate.toFixed(2) + '%';
            
            // æ›´æ–°å…¨æœç»¼åˆç‡ï¼ˆå¦‚æœæœ‰æœåŠ¡å™¨æ•°æ®ï¼‰
            if (serverData && serverData.globalRate !== undefined) {
