        }

        // ç¥ˆæ„¿åä¸‡æ¬¡åŠŸèƒ½
        async function makeWishHundredThousand() {
            await batchWish(100000, 'wishHundredThousandButton', 'ğŸ’€ ç¥ˆæ„¿åä¸‡');
        }

        // æ‰¹é‡ç¥ˆæ„¿é€šç”¨å‡½æ•°
        async function batchWish(count, buttonId, buttonText) {
            const button = document.getElementById(buttonId);
            const allButtons = [
                document.getElementById('wishButton'),
                document.getElementById('wishTenButton'),
                document.getElementById('wishHundredButton'),
                document.getElementById('wishThousandButton'),
                document.getElementById('wishTenThousandButton'),
                document.getElementById('wishHundredThousandButton')
            ];
            
            // ç¦ç”¨æ‰€æœ‰æŒ‰é’®
            allButtons.forEach(btn => btn.disabled = true);
            button.textContent = 'ç¥ˆæ„¿ä¸­...';
            
            try {
                // å‘é€æ‰¹é‡è¯·æ±‚
                const response = await fetch('/api/wish-batch', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': csrfToken
                    },
                    body: JSON.stringify({ 
                        username,
                        currentCount: wishData.current,
                        batchCount: count
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // æ›´æ–°æœ¬åœ°æ•°æ®
                    wishData.total += count;
                    wishData.success += result.successCount;
                    wishData.current = result.newCurrentCount;
                    
                    saveWishData();
                    updateDisplay({globalRate: result.globalRate});
                    
                    // æ˜¾ç¤ºç»“æœ
                    const modal = document.getElementById('fullscreenModal');
                    const content = document.getElementById('modalContent');
                    const rate = ((result.successCount / count) * 100).toFixed(2);
                    content.textContent = `${count}æ¬¡ç¥ˆæ„¿å®Œæˆï¼æˆåŠŸ${result.successCount}æ¬¡ (${rate}%)`;
                    content.className = result.successCount > 0 ? 'modal-content modal-success' : 'modal-content modal-failure';
                    modal.style.display = 'flex';
                    
                    setTimeout(() => {
                        modal.style.display = 'none';
                    }, 4000);
                } else {
                    alert('æ‰¹é‡ç¥ˆæ„¿å¤±è´¥ï¼š' + result.message);
                }
            } catch (error) {
                console.error('æ‰¹é‡ç¥ˆæ„¿å¤±è´¥:', error);
                alert('ç½‘ç»œé”™è¯¯ï¼Œè¯·é‡è¯•');
            } finally {
                // æ¢å¤æ‰€æœ‰æŒ‰é’®
                allButtons.forEach(btn => btn.disabled = false);
                button.textContent = buttonText;
            }
        }

        // ç‚¹å‡»å¼¹çª—ç›´æ¥å…³é—­
        document.getElementById('fullscreenModal').addEventListener('click', function() {
