    <script>
        const username = "<%= username %>";
        const csrfToken = "<%= csrfToken %>";
        
        // ä»localStorageè·å–ç¥ˆæ„¿æ•°æ®
        let wishData = JSON.parse(localStorage.getItem('wishData_' + username) || '{"total": 0, "success": 0, "current": 0}');
        
        // å…¨æœç»¼åˆç‡åˆå§‹å€¼
        let lastGlobalRate = 1.35;
        
        function updateDisplay(serverData = null) {
            document.getElementById('totalWishes').textContent = wishData.total;
            document.getElementById('successCount').textContent = wishData.success;
            document.getElementById('currentProgress').textContent = `${wishData.current} / 148`;
            
            // æ›´æ–°ä¸ªäººä¸­å¥–ç‡
            const personalRate = wishData.total > 0 ? (wishData.success / wishData.total * 100) : 0;
            document.getElementById('personalRate').textContent = personalRate.toFixed(2) + '%';
            
            // æ›´æ–°å…¨æœç»¼åˆç‡ï¼ˆå¦‚æœæœ‰æœåŠ¡å™¨æ•°æ®ï¼‰
            if (serverData && serverData.globalRate !== undefined) {
                lastGlobalRate = serverData.globalRate;
                const globalRate = (serverData.globalRate * 100).toFixed(2);
                document.getElementById('globalRate').textContent = globalRate + '%';
            } else {
                document.getElementById('globalRate').textContent = (lastGlobalRate * 100).toFixed(2) + '%';
            }
            
            const progressPercent = (wishData.current / 148) * 100;
            document.getElementById('progressBar').style.width = progressPercent + '%';
            document.getElementById('progressText').textContent = `${wishData.current} / 148`;
        }
        
        function saveWishData() {
            localStorage.setItem('wishData_' + username, JSON.stringify(wishData));
        }
        

        function showModal(isSuccess) {
            const modal = document.getElementById('fullscreenModal');
            const content = document.getElementById('modalContent');
            
            if (isSuccess) {
                content.textContent = 'ç¥ˆæ„¿æˆåŠŸ';
                content.className = 'modal-content modal-success';
            } else {
                content.textContent = 'ç¥ˆæ„¿å¤±è´¥';
                content.className = 'modal-content modal-failure';
            }
            
            modal.style.display = 'flex';
            
            // 3ç§’åè‡ªåŠ¨å…³é—­ï¼Œç‚¹å‡»å¯æå‰å…³é—­
            setTimeout(() => {
                if (modal.style.display === 'flex') {
                    modal.style.display = 'none';
                }
            }, 3000);
        }
        
        async function makeWish() {
            const button = document.getElementById('wishButton');
            button.disabled = true;
            button.textContent = 'ç¥ˆæ„¿ä¸­...';
            
            try {
                const response = await fetch('/api/wish', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': csrfToken
                    },
                    body: JSON.stringify({ 
                        username,
                        currentCount: wishData.current
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    wishData.total++;
                    
                    if (result.isWin) {
                        wishData.success++;
                        wishData.current = 0; // é‡ç½®è¿›åº¦
                        showModal(true);
                    } else {
                        wishData.current++;
                        showModal(false);
                    }
                    
                    saveWishData();
                    updateDisplay(result);
                } else {
                    alert('ç¥ˆæ„¿å¤±è´¥ï¼š' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('ç½‘ç»œé”™è¯¯ï¼Œè¯·é‡è¯•');
            } finally {
                button.disabled = false;
                button.textContent = 'ğŸ™ è®¸æ„¿ç¥ˆç¥·';
            }
        }
        
        // åˆå§‹åŒ–æ˜¾ç¤º
        updateDisplay();
        
        // é£˜å±ç®¡ç†å™¨
        class DanmakuManager {
            constructor() {
                this.container = document.getElementById('danmaku-container');
                this.usedLanes = new Set(); // é¿å…é‡å 
                this.maxLanes = Math.floor((window.innerHeight - 200) / 50);
            }
            
            addMessage(data) {
                const message = document.createElement('div');
                message.className = 'danmaku-message';
                message.textContent = data.content;
                
                // éšæœºé€‰æ‹©ä¸é‡å çš„è½¨é“
                const lane = this.getAvailableLane();
                message.style.top = `${lane * 50 + 100}px`;
                
                this.container.appendChild(message);
                
                // 12ç§’åç§»é™¤
                setTimeout(() => {
                    if (message.parentNode) {
                        message.parentNode.removeChild(message);
                    }
                    this.usedLanes.delete(lane);
                }, 12000);
                
                this.usedLanes.add(lane);
            }
            
            getAvailableLane() {
                for (let i = 0; i < this.maxLanes; i++) {
                    if (!this.usedLanes.has(i)) {
                        return i;
                    }
                }
                // å¦‚æœæ²¡æœ‰ç©ºé—²è½¨é“ï¼Œéšæœºé€‰æ‹©ä¸€ä¸ª
                return Math.floor(Math.random() * this.maxLanes);
            }
        }
        
        const danmakuManager = new DanmakuManager();
        
        // WebSocketè¿æ¥
        let socket;
        
        function initSocket() {
            console.log('åˆå§‹åŒ–Socketè¿æ¥...');
            socket = io();
            
            socket.on('connect', () => {
