        }

        .wish-button:disabled {
            background: #95a5a6;
            cursor: not-allowed;
            transform: none;
        }

        .wish-stats {
            margin: 30px 0;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 15px;
            border: 2px solid #dee2e6;
        }

        .stats-row {
