    <link rel="stylesheet" href="/styles.css">
    <style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        background: rgba(0, 0, 0, 0.8);
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        color: #fff;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        border-bottom: 2px solid #00c853;
        padding-bottom: 1rem;
    }

    .header h1 {
        margin: 0;
        color: #00c853;
    }

    .balance-display {
        background: linear-gradient(135deg, #00c853, #00bfa5);
        padding: 1rem 1.5rem;
        border-radius: 10px;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .gifts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .gift-card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
        border: 2px solid rgba(0, 200, 83, 0.3);
        border-radius: 15px;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .gift-card:hover {
        transform: translateY(-5px);
        border-color: #00c853;
        box-shadow: 0 10px 25px rgba(0, 200, 83, 0.3);
    }

    .gift-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        display: block;
    }

    .gift-name {
        font-size: 1.3rem;
        font-weight: bold;
        color: #00c853;
        margin-bottom: 0.5rem;
    }

    .gift-description {
        color: #ccc;
        margin-bottom: 1rem;
        line-height: 1.4;
        font-size: 0.9rem;
    }

    .gift-price {
        font-size: 1.5rem;
        font-weight: bold;
        color: #ff9800;
        margin-bottom: 1rem;
    }

    .gift-button {
        width: 100%;
        padding: 0.8rem 1.5rem;
        background: linear-gradient(135deg, #00c853, #00bfa5);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .gift-button:hover:not(:disabled) {
        background: linear-gradient(135deg, #00e676, #1de9b6);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 200, 83, 0.4);
    }

    .gift-button:disabled {
        background: rgba(255, 255, 255, 0.2);
        color: #999;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
    }

    .nav-links {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .nav-links a {
        color: #00c853;
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        background: rgba(0, 200, 83, 0.1);
        transition: all 0.3s ease;
    }

    .nav-links a:hover {
        background: rgba(0, 200, 83, 0.2);
        transform: translateY(-2px);
    }

    .exchange-history {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
    }

    .history-title {
        color: #00c853;
        margin-bottom: 1rem;
        font-size: 1.3rem;
        font-weight: bold;
    }

    .history-item {
        background: rgba(255, 255, 255, 0.05);
        padding: 1rem;
        margin-bottom: 0.5rem;
        border-radius: 8px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .history-gift {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .history-time {
        color: #999;
        font-size: 0.9rem;
    }

    .loading {
        text-align: center;
        color: #ccc;
        padding: 2rem;
    }

    .quantity-selector {
        margin: 1rem 0;
        text-align: center;
        color: #ccc;
    }

    .quantity-selector label {
        font-weight: bold;
        color: #00c853;
    }

    .quantity-selector input {
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(0, 200, 83, 0.3);
        color: white;
        text-align: center;
    }

    .quantity-selector input:focus {
        border-color: #00c853;
        outline: none;
        box-shadow: 0 0 10px rgba(0, 200, 83, 0.3);
    }

    @media (max-width: 768px) {
        .container {
            padding: 1rem;
        }
        
        .header {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }
        
        .gifts-grid {
            grid-template-columns: 1fr;
        }
    }
    </style>
</head>
